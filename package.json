{
  "name": "ytdlp-gui-electron",
  "version": "1.0.0",
  "description": "Beautiful yt-dlp GUI with anime-inspired design",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "dev": "npm run build:css -- --watch & electron . --dev",
    "build": "npm run build:css && electron-builder",
    "dist": "electron-builder --publish=never",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./output.css"
  },
  "keywords": [
    "yt-dlp",
    "youtube",
    "downloader",
    "electron",
    "gui"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^25.9.8",
    "electron-builder": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "build": {
    "appId": "com.yourname.ytdlp-gui",
    "productName": "YT-DLP GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
